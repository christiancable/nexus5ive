{# messages template - 05/05/2014 #}

{# inherit from base here?? #}
{% extends 'base.twig' %}

{% block content %}

{# if there's users on then show the send #}

{% if users is empty %}
<div class="panel panel-default">
    <div class="panel-body">
        Looks like there's no one else here. (╯°□°）╯︵ ┻━┻
    </div>
</div>
{% endif %}


{% if users is not empty %}

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Status</th>
      <th>Current Action</th>
      <th>Last Active</th>
  </tr>
</thead>
<tbody>


{% for user in users %}

    <tr>
      <td><a href="{{ page.root}}/messages/{{ user.user_id }}"><span class="glyphicon glyphicon glyphicon-envelope"></span></a></td>
      <td><a href="{{ page.root }}/user/{{ user.user_id }}">{{ user.user_name }}</a></td>
      <td>{{ user.user_popname }}</td>
      <td>{{ user.user_location }}</td>
      <td>{{ user.last_active }}</td>
  </tr>
  
{% endfor %}

</tbody>
</table>


{% endif %}


{% endblock %}
